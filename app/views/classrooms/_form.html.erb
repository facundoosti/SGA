<div class="box-body">
  <%= form_for :classrooms, url: @action, html: {method: @method} do |f| %>
    <div class="form-group">
      <label class="col-sm-3 control-label">Nombre</label>
      <div class="col-sm-6 input-group">
       <%= text_field(:classroom, :name, value: @classroom['name'], class: "form-control")  %>
      </div><!-- /.input group -->
    </div>    
    <div class="form-group">
      <label class="col-sm-3 control-label" >Descripcion</label>
      <div class="input-group">
        <textarea class="form-control" rows="6" cols="75" name="classroom[description]"><%= @classroom['description']%></textarea>
      </div>
      <div class="box-footer">
        <button type="submit" name="commit" value="Create Classroom" class="btn btn-primary">Guardar</button>
      </div>  
    </div>    
  <% end %>
</div>  

