<div class="box-body">
  <%= form_for(@classroom) do |f| %>

    <% if @classroom.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h2>

        <ul>
        <% @classroom.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label class="col-sm-3 control-label">Nombre</label>
      <div class="input-group">
          <input type="text" name="classroom[name]" class="form-control"/>
      </div><!-- /.input group -->
    </div>    
    <div class="form-group">
      <label class="col-sm-3 control-label" >Descripcion</label>
      <div class="input-group">
        <textarea class="form-control" rows="6" cols="75" name="classroom[description]" ></textarea>
      </div>
      <div class="box-footer">
        <button type="submit" name="commit" value="Create Classroom" class="btn btn-primary pull-right">Crear</button>
      </div>  
    </div>    
  <% end %>
</div>  

