<%# navigation styled for Bootstrap 3.0 %>
<%= link_to 'Sga', root_path, class: 'logo' %>
<nav class="navbar navbar-static-top" role="navigation">
  <div class="navbar-right">
    <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <% if user_signed_in? %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="glyphicon glyphicon-user"></i>
                <span><%= current_user.name %><i class="caret"></i></span>
            </a>
            <ul class="dropdown-menu">
                <!-- User image -->
                <li class="user-header bg-light-blue">
                    <p>
                      <%= current_user.name %>
                      <small><%= current_user.rol.capitalize %></small>
                    </p>
                </li>             
                <!-- Menu Footer-->
                <li class="user-footer">
                    <div class="pull-right">
                      <%= link_to 'Salir', destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat" %>
                    </div>
                </li>
            </ul>
          <% else %>
            <%= link_to 'Iniciar Sesion', new_user_session_path, class: "btn btn-flat" %>
          <% end %>
        </li>
      </ul>  
    </div>
</nav>
