<div class="box-body">
  <%= form_for :booking, url: {action: :create} do |f| %>

    <%= hidden_field_tag 'link', @link %>

    <div class="form-group">
      <p>Rango Libre. Desde: <%= @from %> hasta: <%= @to %></p>
      
      <label>Rango de Tiempo para la Reserva:</label>
      <div class="input-group">
        <div class="input-group-addon">
            <i class="fa fa-clock-o"></i>
        </div>
        <input type="text" name="daterange" class="form-control pull-right" id="reservationtime" >
      </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <button type="submit" class="btn btn-primary">Crear</button>
      </div>  
    </div>  
  <% end %>