<div class="row">

  <div class="col-md-6">

    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title">Availabilities</h3>
      </div>
      <div class="box-body">
        <%= form_tag '/availabilities' , method: "get" do %>
         <!-- Date dd/mm/yyyy -->
        <div class="form-group">
            <label>Date:</label>
            <div class="input-group">
                <input type="text" name="date" class="form-control" placeholder="YYYY-MM-DD" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask/>
            </div><!-- /.input group -->
            <div class="input-group">
              <label>Range</label>
              <input type="number" name="limit" class="form-control" min="0" max="365"  >
            </div>
            </div><!-- /.form group -->
        <%= hidden_field_tag 'link', @link %>
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      <% end %>
      </div>
    </div>  
  </div> 
  
  <% unless @availabilities.nil? %> 
  
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Listing availabilities</h3>                              
      </div><!-- /.box-header -->
      
      <div class="box-body table-responsive">     

        <table id="example2" class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>From</th>
              <th>To</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @availabilities.each do |availability| %>
              <tr>
                <td><%= availability.from %></td>
                <td><%= availability.to %></td>
                <td><%= link_to 'Reservar Aula', new_availability_path, class: "btn btn-success btn-sm" %></td>
                <td><%#= link_to 'Edit', edit_availability_path(availability) %></td>
                <td><%#= link_to 'Destroy', availability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

      <%#= link_to 'New Availability', new_availability_path %>
    
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div><!-- /.col -->  
  <% end %>
